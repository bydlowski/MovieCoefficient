<h1>Coeficient</h1>
<% if user_signed_in? %>
  <div>Signed in as... <%= current_user.username %></div>
  <div>Coeficient: <%= current_user.coeficient %></div>
<% end %>
<script type="text/javascript">
	var one = 1;
	var two = 2;
	var jsSum = one + two;
	$(document).on('mouseenter', '#the_form', function(e) {
		e.preventDefault();
		$('#form_movie').val(jsSum);
	});	
</script>
<br />
<div id="the_form">
	<%= form_for('result_path', remote: true, method: 'post') do |f| %>
	  <%= f.label :name %><br>
	  <%= f.text_field :name %>
	  <%= f.hidden_field :movie, id: 'form_movie' %>
	  <%= f.submit %>
	<% end %>
</div>

<br />
<div><%= link_to "2017", result_path(this_year: 2017), :method => :post, :remote => true %></div>
<div id="result"></div>